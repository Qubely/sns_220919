<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.like.dao.LikeDAO">
 	<select id="selectLikeByUserId" parameterType="int" resultType="int">
 		SELECT COUNT(*)
 		FROM
 			`like`
 		WHERE
 			`userId` = #{userId}
 	</select>
 	
 	<delete id="deleteLikeByUserId" parameterType="int">
 		DELETE FROM `like`
 		WHERE
 			`userId` = #{userId}
 	</delete>
 	
 	<insert id="insertLike" parameterType="map">
 		INSERT INTO `like`
 		(
 			`userId`
			, `postId`
			, `createdAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{postId}
 			, NOW()
 		)
 	</insert>
 </mapper>